<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GliCheckMain">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRelatorio"
        android:id="@+id/btnRelatorio"
        android:layout_below="@+id/btnMedirGli"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:layout_toLeftOf="@+id/btnCadastrarMedicamento"
        android:layout_toStartOf="@+id/btnCadastrarMedicamento" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMedirGli"
        android:id="@+id/btnMedirGli"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnGraficos"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIngestaoMedicacao"
        android:text="Ingerir Medicacao"
        android:layout_below="@+id/btnCadastrarMedicamento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnMedirGli"
        android:layout_alignEnd="@+id/btnMedirGli" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Medicamento"
        android:id="@+id/btnCadastrarMedicamento"
        android:layout_toRightOf="@+id/btnIngestaoMedicacao" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Medicamento"
        android:id="@+id/btnListaMedicamento"
        android:layout_below="@+id/btnCadastrarMedicamento"
        android:layout_alignRight="@+id/btnCadastrarMedicamento"
        android:layout_alignEnd="@+id/btnCadastrarMedicamento" />

</RelativeLayout>
